generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Ticket {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  title     String
  content   String       @db.VarChar(1024)
  bounty    Int
  deadline  String
  status    TicketStatus @default(OPEN)
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  DONE
}
