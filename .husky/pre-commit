#!/usr/bin/env sh

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BOLD='\033[1m'
NC='\033[0m'

echo "${YELLOW}${BOLD}ğŸ” Running pre-commit checks...${NC}"

# Run lint-staged
echo "${YELLOW}ğŸ“ Formatting and linting staged files...${NC}"
npx lint-staged || {
  echo "${RED}${BOLD}âŒ Pre-commit checks failed!${NC}"
  echo "${RED}Please fix the issues above and try again.${NC}"
  exit 1
}

echo "${GREEN}${BOLD}âœ… Pre-commit checks passed!${NC}"
